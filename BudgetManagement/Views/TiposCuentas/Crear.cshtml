@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear tipo de Cuenta</h1>
<h5>
    El tipo de cuenta se refiere a cómo podemos agrupar cuentas.
    Ejemplo: Préstamos, Tarjetas de crédito, Etc.
</h5>

<div asp-validation-summary="ModelOnly" class="text-danger" ></div>

<form asp-action="Crear">

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre"  class="form-comtrol" />
        <span asp-validation-for="Nombre" class=”text-danger” style="color:red"></span>
    </div>

    <button type="submit" class="btn btn-primary ">Enviar</button>
    <a class="btn btn-secondary"  asp-action="Index">Cancelar</a>
</form>

@section Scripts 
{
    <partial name="_ValidationScriptsPartial"/>
}